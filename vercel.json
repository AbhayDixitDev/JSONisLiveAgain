{
  "version": 2,
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "builds": [
    {
      "src": "./src",
      "use": "@vercel/static-build",
      "config": {
        "github": {
          "autoJobCancellation": true
        }
      },
      "includeFiles": "db.json" // Add this line
    }
  ]
}
