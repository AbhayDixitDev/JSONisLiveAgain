{
  "version": 2,
  "functions": {
    "api/server.js": {
      "memory": 1024,
      "includeFiles": ["db.json"] // Note the array syntax
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  }
}
